<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <br>
  <h3> <%= restaurant.name %> </h3>
  <% @reviews.each do |review| %>
    <p>  <%= review.content %> </p>
    <p>  <%= review.rating %> </p>
  <% end %>

  <button><%= link_to "Delete", restaurant_path(restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" } %></button>

<% end %>
<br>

<button><%= link_to "Add a new restaurant", new_restaurant_path, method: :get %></button>

